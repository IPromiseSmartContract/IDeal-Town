{
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "strict": true,
    "lib": [
      "ES2016",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [],
    "isolatedModules": true,
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
